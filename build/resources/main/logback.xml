<configuration>
    <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%green(%d{HH:mm:ss.SSS})] [%highlight(%-5level)] (%file:%line\) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="COLOR"/>
    </root>
</configuration>